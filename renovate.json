{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "configMigration": true,
  "semanticCommits": "enabled",
  "enabledManagers": [
    "custom.regex"
  ],
  "argocd": {
    "managerFilePatterns": [
      "**/*-application.yaml",
      "**/application.yaml"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/\\.ya?ml$/"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>\\S+) registryUrl=(?<registryUrl>\\S+) depName=(?<depName>\\S+)\\s+version: (?<currentValue>.*)"
      ]
    }
  ]
}
